    <tr><td><%= form.text_field :price %>円</td></tr>
    <tr><td><label for="address">住所</label></td></tr>
    <tr><td><%= form.text_field :address %></td></tr>
    <tr><td><label for="age">築年数</label></td></tr>
    <tr><td><%= form.text_field :age %></td></tr>
